{
  "expo": {
    "name": "mobile",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "We use Bluetooth to connect to your Omi wearable.",
        "NSBluetoothPeripheralUsageDescription": "We use Bluetooth to connect to your Omi wearable.",
        "NSMicrophoneUsageDescription": "We use the microphone for live captions.",
        "UIBackgroundModes": [
          "bluetooth-central",
          "audio",
          "bluetooth-central",
          "audio"
        ]
      },
      "bundleIdentifier": "com.timmy.amby.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_SCAN",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "de35b464-bbb9-4a65-9f7d-777949ccf704"
      }
    }
  }
}
